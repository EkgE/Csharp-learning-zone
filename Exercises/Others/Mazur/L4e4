        public static void Quicksort(double[] arr, int left, int right)
        {
            if (left < right)
            {
                int pivot = Partitioning(arr, left, right);
                if (pivot > 1)
                {
                    Quicksort(arr, left, pivot - 1);
                }
                if (pivot + 1 < right)
                {
                    Quicksort(arr, pivot + 1, right);
                }
            }
        }
        public static int Partitioning(double[] arr, int left, int right)
        {
            double pivot = arr[left]; 
            while (true)
            {
                while (arr[left] < pivot)
                    left++;
                while (arr[right] > pivot)
                    right--;
                if (left < right)
                {
                    double temp = arr[right];
                    arr[right] = arr[left];
                    arr[left] = temp;
                }
                else
                {
                    return right;
                }
            }
        }
