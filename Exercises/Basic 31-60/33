    internal class Exercise
    {
        /* Write a C# program to check if a given positive number is a multiple of 3 or a multiple of 7. 
         */

        static void Main(string[] args)
        {
            Console.Write("Enter positive number: ");
            int number = Convert.ToInt32(Console.ReadLine());
            if (number >= 0)
            {
                if (number % 3 == 0 || number % 7 == 0)
                {
                    Console.WriteLine("Your number is divided by 7 or 3");
                }
                else Console.WriteLine("Your number is not divided by 7 or 3");
            }
            else Console.WriteLine("Your number is not positive");
            
          
  

        }


    }
