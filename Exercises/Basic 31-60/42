internal class Exercise
{
    /* Create a new string where the first 4 characters will be in lower case
     */

    static void Main(string[] args)
    {
        Console.Write("Enter your sentence: ");
        string input = Console.ReadLine();

        string fourCharInput = input.Substring(0, 4).ToLower();
        string restInput = input.Substring(4);
        string output = fourCharInput + restInput;
        Console.WriteLine("New string is " + output);

        Console.ReadKey();


 

    }
}
