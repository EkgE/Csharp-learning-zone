internal class Exercise
{
    /* Write a C# program to check if a given string contains 'w' character between 1 and 3 times.
     */

    static void Main(string[] args)
    {
        Console.Write("Enter your sentence: ");
        string x = Console.ReadLine();

        char[] stringArray = x.ToCharArray();
        int count = 0;
        for(int i = 0; i < stringArray.Length; i++)
        {
            if (stringArray[i] == 'w')
            {
                count++;
            }
        }
        Console.WriteLine("Given string contain {0} 'w' characters", count);
        Console.ReadKey();


 

    }
}
