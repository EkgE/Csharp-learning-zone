internal class Exercise
{
    /* Write a C# program to check the nearest value of 20 of two given integers and return 0 if two numbers are same.
     */

    static void Main(string[] args)
    {
        Console.Write("Enter first number: ");
        int x = Convert.ToInt32(Console.ReadLine());
        Console.Write("Enter second number: ");
        int y = Convert.ToInt32(Console.ReadLine());
        if (x == y)
        {
            Console.WriteLine("Numbers are not the same, returning 0");
        }
        else Console.WriteLine(20 - Math.Abs(x) < 20 - Math.Abs(y) ? x : y);
        Console.ReadKey();  

    }
}
