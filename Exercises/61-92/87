using System;

internal class Exercise
{
    /* Write a C# Sharp program to reverse a boolean value.
     */

    static void Main(string[] args)
    {
        Console.WriteLine("Write 1 for true or 0 for false");
        string input = Console.ReadLine();
        if(String.Equals(input, "1"))
        {
            Console.WriteLine("Now its {0} hahahaha", Ex87(true));
        }
        else if (String.Equals(input, "0"))
        {
            Console.WriteLine("Now its {0} hahahaha", Ex87(false));
        }
        else
        {
            Console.WriteLine("You're supposed to enter 0 or 1 dummy");
        }
        Console.ReadKey();
    }

    public static bool Ex87(bool input)
    {
        return !input;
    }
   
}



